            },
            "zone": 1
          },
          "devices": [
            {
              "name": "{{ storage_dev }}",
              "destroydata": false
            }
          ]
        }
        {% if not loop.last %}
          ,
        {% endif %}            
        {% endfor %}
      ]
    }
  ]
}