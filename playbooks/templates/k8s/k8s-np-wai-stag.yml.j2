# {{ ansible_managed }}
# Deny all traffic
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: deny-network-policy
  namespace: {{ item }}
spec:
  podSelector: {}
  policyTypes:
  - Ingress
  - Egress
---
# Allow egresss to Elastic search
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-egress-network-policy
  namespace: {{ item }}
spec:
  podSelector: {}
  policyTypes:
  - Ingress
  egress:
  # Allow connect to elastic
  - to:
{% for es in  groups["elastic"] | map("extract", hostvars, ["ansible_default_ipv4", "address"]) %}
      - ipBlock:
          cidr: {{es}}/32
{% endfor %}
      ports:
      - protocol: TCP
        port: 9200
  # Allow connect to mariadb
  - to:
      - ipBlock:
          cidr: {{ hostvars[groups['mariadb-stag'][0]]['rdbms_load_balancer']}}/32
      ports:
      - protocol: TCP
        port: 3306
