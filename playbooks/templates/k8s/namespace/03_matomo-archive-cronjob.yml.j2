apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: matomo-core-archive-all
  namespace: {{ item }}
spec:
  schedule: "00 01 * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: matomo
            image: {{ wai_matomo_image }}:{{ 'latest' if item == 'wai-stag' else wai_matomo_image_tag }}
            args:
            - /var/www/html/console 
            - core:archive
          restartPolicy: OnFailure
          resources:
            limits:
              cpu: "0.50"
              memory: "256Mi"
