# {{ ansible_managed }}
# Deny all traffic
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: deny-network-policy
  namespace: {{ item }}
spec:
  podSelector: {}
  policyTypes:
  - Ingress
  - Egress
---
# Allow from monitoring namespace
kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-monitoring
  namespace: {{ item }}
spec:
  policyTypes:
  - Ingress
  podSelector: {}
  ingress:
  - from:
    - namespaceSelector:
        matchLabels:
          name: monitoring
---
# Allow intra namespace traffic
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-intra-namespace
  namespace: {{ item }}
spec:
  policyTypes:
  - Egress
  - Ingress
  podSelector: {}
  ingress:
  - from:
    - namespaceSelector:
        matchLabels:
          environment: {{ item }}
  egress:
  - to:
    - namespaceSelector:
        matchLabels:
          environment: {{ item }}
---
# Allow mail outbound traffic
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-mail-traffic
  namespace: {{ item }}
spec:
  podSelector:
    matchLabels:
      app: portal-queue-worker
  policyTypes:
  - Egress
  egress:
  - to:
    ports:
    - protocol: TCP
      port: 587
---  
# Allow WAI traffic
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-generic
  namespace: {{ item }}
spec:
  podSelector: {}
  policyTypes:
  - Egress
  - Ingress
  ingress:
  - ports:
    - port: 80
  egress:
  # Allow connect to elastic
  - to:
{% for es in  wai_load_balancer[item].elastic %}
    - ipBlock:
        cidr: {{es}}/32
{% endfor %}
    ports:
    - protocol: TCP
      port: 9200
  # Allow connect to mariadb
  - to:
{% for host in  wai_load_balancer[item].rdbms %}
    - ipBlock:
        cidr: {{ host }}/32
{% endfor %}
    ports:
    - protocol: TCP
      port: 3306
  - to:
    - namespaceSelector:
        matchLabels:
          name: kube-system
    ports:
    - protocol: UDP
      port: 53
  - to:
    ports:
    - protocol: TCP
      port: 80
    - protocol: TCP
      port: 443
